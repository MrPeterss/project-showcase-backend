generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum CourseOfferingRole {
  INSTRUCTOR
  STUDENT
  VIEWER
}

model User {
  id           Int      @id @default(autoincrement())
  name         String?
  email        String   @unique
  refreshToken String?  @unique
  firebaseId   String?  @unique
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())

  courseOfferingEnrollments CourseOfferingEnrollment[]
  teamMemberships           TeamMembership[]
  deployedProjects          Project[]
}

model Course {
  id         Int      @id @default(autoincrement())
  name       String
  number     Int
  department String
  createdAt  DateTime @default(now())

  offerings CourseOffering[]
}

model Semester {
  id        Int      @id @default(autoincrement())
  season    String
  year      Int
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  offerings CourseOffering[]
}

model CourseOffering {
  id        Int      @id @default(autoincrement())
  settings  Json
  createdAt DateTime @default(now())

  course     Course   @relation(fields: [courseId], references: [id])
  courseId   Int
  semester   Semester @relation(fields: [semesterId], references: [id])
  semesterId Int

  enrollments CourseOfferingEnrollment[]        @relation("courseOffering")
  referredEnrollments CourseOfferingEnrollment[] @relation("referringCourseOffering")
  teams       Team[]

  @@unique([courseId, semesterId])
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())

  CourseOffering   CourseOffering @relation(fields: [courseOfferingId], references: [id])
  courseOfferingId Int

  members  TeamMembership[]
  projects Project[]
}

model CourseOfferingEnrollment {
  role                        CourseOfferingRole

  user                        User           @relation(fields: [userId], references: [id])
  userId                      Int
  courseOffering              CourseOffering @relation("courseOffering", fields: [courseOfferingId], references: [id])
  courseOfferingId            Int
  referringCourseOffering     CourseOffering? @relation("referringCourseOffering", fields: [referringCourseId], references: [id])
  referringCourseId           Int?

  @@id([userId, courseOfferingId])
}

model TeamMembership {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  team   Team @relation(fields: [teamId], references: [id])
  teamId Int

  @@id([userId, teamId])
}

model Project {
  id            Int       @id @default(autoincrement())
  githubUrl     String
  imageName     String
  containerId   String?   @unique
  containerName String?
  status        String    // running, stopped, failed, etc.
  ports         Json?     // Store port mappings as JSON
  buildLogs     String?   // Store build logs as text
  buildArgs     Json?     // Store build arguments as JSON
  dataFile      String?   // Path to uploaded data file on host
  deployedAt    DateTime  @default(now())
  stoppedAt     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  team       Team @relation(fields: [teamId], references: [id])
  teamId     Int
  deployedBy User? @relation(fields: [deployedById], references: [id])
  deployedById Int?
}
